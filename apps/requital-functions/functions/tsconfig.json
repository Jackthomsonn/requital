{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
