{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "tests", "src/lib/**/*.test.ts"]
}
